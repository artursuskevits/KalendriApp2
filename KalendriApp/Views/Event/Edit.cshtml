@model KalenderApp.Models.Event
@{
    ViewData["Title"] = "Lisa sündmus";
}
<header style="background-color: #333; padding: 10px; color: #fff; font-family: Arial, sans-serif;">
    <nav style="display: flex; justify-content: center; gap: 20px;">
        <a href="/Home/Index" style="color: #fff; text-decoration: none; font-weight: bold;">Avaleht</a> |
        <a href="/Event/Index" style="color: #fff; text-decoration: none; font-weight: bold;">Minu sündmused</a> |
        <a href="/Account/Login" style="color: #fff; text-decoration: none; font-weight: bold;">Logi sisse</a> |
        <a href="/Account/Register" style="color: #fff; text-decoration: none; font-weight: bold;">Registreeru</a>
    </nav>
</header>

<h2>Lisa uus sündmus</h2>

<form asp-action="Create" method="post" class="mt-4">
    <div class="form-group mb-3">
        <label for="Title">Pealkiri</label>
        <input asp-for="Title" class="form-control" placeholder="Sündmuse pealkiri" />
    </div>
    <div class="form-group mb-3">
        <label for="Description">Kirjeldus</label>
        <textarea asp-for="Description" class="form-control" placeholder="Sündmuse kirjeldus"></textarea>
    </div>
    <div class="form-group mb-3">
        <label for="StartDateTime">Algusaeg</label>
        <input asp-for="StartDateTime" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label for="EndDateTime">Lõppaeg</label>
        <input asp-for="EndDateTime" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label for="CategoryId">Kategooria</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
            <option value="">Vali kategooria</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Lisa sündmus</button>
</form>
